<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopOwnerViewVetrinaActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="FLORIDA"
        app:titleTextColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        app:titleTextAppearance="@style/dtop_back_title_text_appearance"
        />

    <com.roacult.backdrop.BackdropLayout
        android:id="@+id/back_drop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:peekHeight="56dp"
        app:toolbarId="@id/my_tool_bar"
        app:menuDrawable="@drawable/ic_back_drop_icon"
        app:back_layout="@id/back_include"
        app:front_layout="@id/front_include"
        app:closeDrawable="@drawable/ic_close"
        >


        <include
            android:id="@+id/back_include"
            layout="@layout/back_back_drop_layout" />
        <include
            android:id="@+id/front_include"
            layout="@layout/front_back_drop_layout" />



    </com.roacult.backdrop.BackdropLayout>



</LinearLayout>